{
	"name": "Node.js",
	"build": {
		"dockerfile": "Dockerfile",
		"args": { "VARIANT": "16-bullseye" }
	},
	"customizations": {
		"vscode": {
			"extensions": [
				"dbaeumer.vscode-eslint",
				"rust-lang.rust-analyzer",
				"mutantdino.resourcemonitor",
				"tamasfe.even-better-toml",
				"serayuzgur.crates",
				"vadimcn.vscode-lldb"
			]
		}
	},
	"forwardPorts": [6080],
	"postCreateCommand": "yarn install",
	"remoteUser": "node",
	"features": {
		"rust": "latest",
		"desktop-lite": "latest" // password is vscode
	}
}
