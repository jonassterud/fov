{
	"name": "Tauri",
	"build": {
		"dockerfile": "Dockerfile",
		"args": { "VARIANT": "16-bullseye" }
	},
	"customizations": {
		"vscode": {
			"extensions": [
				"dbaeumer.vscode-eslint",
				"rust-lang.rust-analyzer",
				"mutantdino.resourcemonitor",
				"tamasfe.even-better-toml",
				"serayuzgur.crates",
				"vadimcn.vscode-lldb"
			]
		}
	},
	"forwardPorts": [6080], // for desktop-lite
	"postCreateCommand": "yarn install",
	"remoteUser": "node",
	"features": {
		"rust": "latest"
		//"desktop-lite": "latest" // password is vscode
	},
	// If you want to use your actual display
	// You might need to run "xhost local:root" on your local machine 
	"containerEnv": {
        "DISPLAY": "unix:1", // check with "echo $DISPLAY"
		"QT_X11_NO_MITSHM": "1"
    },
    "mounts": [
        "source=/tmp/.X11-unix,target=/tmp/.X11-unix,type=bind,consistency=cached"
	]
}
